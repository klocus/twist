<div class="blog-comment {{ comment.comment_type }}" id="blog-comment-{{ comment.ID }}">
  <h5 class="comment-author">{{ comment.author.name }} {{ __('says', 'twist') }}</h5>
  <div class="comment-content">{{ comment.comment_content|wpautop }}</div>

  <section class="comment-box">
    <!-- child comments -->
    {% if comment.children %}
      <h4>{{ __('replies', 'twist') }}</h4>
      <div class="comments">
        {% for cmt in comment.children %}
          {% include "components/comment.twig" with {comment:cmt} %}
        {% endfor %}
      </div>
    {% endif %}
  </section>
</div>